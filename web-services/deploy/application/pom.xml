    <profiles>
        <!--
            When the dist profile is active, we will skip javadoc generation for this module (javadoc generation is only
            on when the dist profile is active). We also pull in web-service-docs:war as a dependency and include it in
            the generated ear.
        -->
        <profile>
            <id>dist</id>
            <activation>
                <property>
                    <name>dist</name>
                </property>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>gov.nsa.datawave.webservices</groupId>
                    <artifactId>datawave-ws-deploy-docs</artifactId>
                    <version>${project.version}</version>
                    <type>war</type>
                </dependency>
            </dependencies>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-ear-plugin</artifactId>
                        <configuration>
                            <modules>
                                <webModule>
                                    <groupId>gov.nsa.datawave.webservices</groupId>
                                    <artifactId>datawave-ws-deploy-docs</artifactId>
                                    <contextRoot>/DataWave/doc</contextRoot>
                                </webModule>
                            </modules>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>client-login-example</id>
            <dependencies>
                <dependency>
                    <groupId>gov.nsa.datawave.webservices</groupId>
                    <artifactId>datawave-ws-examples-client-login</artifactId>
                    <version>${project.version}</version>
