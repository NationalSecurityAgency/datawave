        </profile>
        <!--
            When the geoserver profile is active, we will include a geoserver deployment in the ear which includes
            support for the GeoWave datastore.
        -->
        <profile>
            <id>geoserver</id>
            <activation>
                <property>
                    <name>geoserver</name>
                </property>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>gov.nsa.datawave.webservices</groupId>
                    <artifactId>datawave-ws-geoserver-application</artifactId>
                    <version>${project.version}</version>
                    <type>war</type>
                </dependency>
            </dependencies>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <version>3.0.0</version>
                        <executions>
                            <execution>
                                <id>copy-dependencies</id>
                                <goals>
                                    <goal>copy</goal>
                                </goals>
                                <phase>prepare-package</phase>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>gov.nsa.datawave.webservices</groupId>
                                            <artifactId>datawave-ws-geoserver-application</artifactId>
                                            <version>${project.version}</version>
                                            <type>war</type>
                                            <overWrite>true</overWrite>
                                            <outputDirectory>${project.build.directory}/${project.artifactId}-${project.version}</outputDirectory>
                                            <destFileName>datawave-ws-geoserver-application-${project.version}.war</destFileName>
                                        </artifactItem>
                                    </artifactItems>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <artifactId>maven-ear-plugin</artifactId>
                        <configuration>
                            <modules>
                                <webModule>
                                    <groupId>gov.nsa.datawave.webservices</groupId>
                                    <artifactId>datawave-ws-geoserver-application</artifactId>
                                    <bundleFileName>datawave-ws-geoserver-application-${project.version}.war</bundleFileName>
                                    <contextRoot>/geoserver</contextRoot>
                                </webModule>
                            </modules>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <!--
            When the assemble profile is active, we will build an assembly tarball that includes the EAR as well
            as configuration for a clean installation of Wildfly.
        -->
        <profile>
            <id>assemble</id>
            <activation>
                <property>
                    <name>tar</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <!-- Activate the assert-properties plugin to ensure all configuration we require is set. -->
                        <groupId>gov.nsa.datawave.plugins</groupId>
                        <artifactId>assert-properties</artifactId>
                        <executions>
                            <execution>
                                <id>assert-properties</id>
                                <goals>
                                    <goal>assert-properties</goal>
                                </goals>
                                <phase>initialize</phase>
                                <configuration>
                                    <expectedPropertyNames>src/main/assert/expected-properties.txt</expectedPropertyNames>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>assembly</id>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                                <phase>package</phase>
                                <configuration>
                                    <descriptors>
                                        <descriptor>src/main/assembly/dist.xml</descriptor>
                                    </descriptors>
                                    <tarLongFileMode>posix</tarLongFileMode>
                                    <finalName>${project.artifactId}-${project.version}</finalName>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <executions>
                            <!--
                                Copy the MySQL connector jar to a known place so we can deploy it to Wildfly in the setup script.
                            -->
                            <execution>
                                <id>copy-mysql-jar</id>
                                <goals>
                                    <goal>copy</goal>
                                </goals>
                                <phase>process-resources</phase>
                                <configuration>
                                    <outputDirectory>${project.build.directory}/wildfly/mysql</outputDirectory>
                                    <overWriteIfNewer>true</overWriteIfNewer>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>mysql</groupId>
                                            <artifactId>mysql-connector-java</artifactId>
                                        </artifactItem>
                                    </artifactItems>
                                </configuration>
                            </execution>
                            <!--
                                Copy resources needed for the Hadoop configuration/native library module
                            -->
                            <execution>
                                <id>copy-hadoop-dependencies</id>
                                <goals>
                                    <goal>copy</goal>
                                </goals>
                                <phase>process-resources</phase>
                                <configuration>
                                    <outputDirectory>${project.build.directory}/wildfly/overlay/modules/org/apache/hadoop/common/main</outputDirectory>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>org.apache.hadoop</groupId>
                                            <artifactId>hadoop-auth</artifactId>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>org.apache.hadoop</groupId>
                                            <artifactId>hadoop-common</artifactId>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>org.apache.htrace</groupId>
                                            <artifactId>htrace-core4</artifactId>
                                            <version>4.0.1-incubating</version>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>com.google.protobuf</groupId>
                                            <artifactId>protobuf-java</artifactId>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>commons-configuration</groupId>
                                            <artifactId>commons-configuration</artifactId>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>javax.servlet</groupId>
                                            <artifactId>servlet-api</artifactId>
                                            <version>2.5</version>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>org.apache.avro</groupId>
                                            <artifactId>avro</artifactId>
                                        </artifactItem>
                                    </artifactItems>
                                </configuration>
                            </execution>
                            <!--
                                Copy resources needed to run MapReduce queries
                            -->
                            <execution>
                                <id>copy-mapreduce-dependencies</id>
                                <goals>
                                    <goal>copy</goal>
                                </goals>
                                <phase>process-resources</phase>
                                <configuration>
                                    <outputDirectory>${project.build.directory}/wildfly/overlay/tools/mapreduce/lib</outputDirectory>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>javax.inject</groupId>
                                            <artifactId>javax.inject</artifactId>
                                            <version>1</version>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>javax.enterprise</groupId>
                                            <artifactId>cdi-api</artifactId>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>org.jboss.resteasy</groupId>
                                            <artifactId>resteasy-jaxrs</artifactId>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>org.jboss.spec.javax.annotation</groupId>
                                            <artifactId>jboss-annotations-api_1.3_spec</artifactId>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>org.jboss.spec.javax.ejb</groupId>
                                            <artifactId>jboss-ejb-api_3.2_spec</artifactId>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>org.jboss.spec.javax.enterprise.concurrent</groupId>
                                            <artifactId>jboss-concurrency-api_1.0_spec</artifactId>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>org.jboss.spec.javax.interceptor</groupId>
                                            <artifactId>jboss-interceptors-api_1.2_spec</artifactId>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>org.jboss.spec.javax.jms</groupId>
                                            <artifactId>jboss-jms-api_2.0_spec</artifactId>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>org.jboss.spec.javax.security.jacc</groupId>
                                            <artifactId>jboss-jacc-api_1.5_spec</artifactId>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>org.jboss.spec.javax.servlet</groupId>
                                            <artifactId>jboss-servlet-api_4.0_spec</artifactId>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>org.jboss.spec.javax.transaction</groupId>
                                            <artifactId>jboss-transaction-api_1.2_spec</artifactId>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>xerces</groupId>
                                            <artifactId>xercesImpl</artifactId>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>gov.nsa.datawave.webservices</groupId>
                                            <artifactId>datawave-ws-map-reduce-embedded</artifactId>
                                            <version>${project.version}</version>
                                        </artifactItem>
                                    </artifactItems>
                                </configuration>
                            </execution>
                            <!--
                                Unpack Configuration files into the configuration jboss module (this allows easy modification at runtime)
                            -->
                            <execution>
                                <id>unpack-configuration</id>
                                <goals>
                                    <goal>unpack</goal>
                                </goals>
                                <phase>process-resources</phase>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>gov.nsa.datawave.webservices</groupId>
                                            <artifactId>datawave-ws-deploy-configuration</artifactId>
                                            <version>${project.version}</version>
                                            <classifier>${build.env}</classifier>
                                        </artifactItem>
                                    </artifactItems>
                                    <excludes>META-INF/**</excludes>
                                    <outputDirectory>${project.build.directory}/wildfly/overlay/modules/datawave/webservice/configuration/main/conf</outputDirectory>
                                </configuration>
                            </execution>
                            <!--
                                Unpack scripts that are in the cached results jar.
                            -->
                            <execution>
                                <id>unpack-cached-results-scripts</id>
                                <goals>
                                    <goal>unpack</goal>
                                </goals>
                                <phase>generate-resources</phase>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>gov.nsa.datawave.webservices</groupId>
                                            <artifactId>datawave-ws-cached-results</artifactId>
                                            <version>${project.version}</version>
                                        </artifactItem>
                                    </artifactItems>
                                    <includes>replication_scripts/**</includes>
                                    <outputDirectory>${project.build.directory}/wildfly/overlay</outputDirectory>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <artifactId>maven-resources-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>copy-scripts</id>
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
                                <phase>process-resources</phase>
                                <configuration>
                                    <outputDirectory>${project.build.directory}/wildfly</outputDirectory>
                                    <resources>
                                        <resource>
                                            <directory>${project.basedir}/src/main/wildfly</directory>
                                            <excludes>
                                                <exclude>**/*.p12</exclude>
                                                <exclude>**/*.jks</exclude>
                                                <exclude>**/*.jar</exclude>
                                                <exclude>**/*.h2.db</exclude>
                                            </excludes>
                                            <filtering>true</filtering>
                                        </resource>
                                        <resource>
                                            <directory>${project.basedir}/src/main/wildfly</directory>
                                            <includes>
                                                <include>**/*.p12</include>
                                                <include>**/*.jks</include>
                                                <include>**/*.jar</include>
                                                <include>**/*.h2.db</include>
