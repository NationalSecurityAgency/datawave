<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <context:property-placeholder location="classpath:/datawave/query/database.properties" system-properties-mode="OVERRIDE" ignore-unresolvable="true" />

	<!-- Database properties are retrieved from the database.properties file but can be overridden by system properties
	<bean id="dataDictionaryPropertyPlaceholderConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location">
			<value>classpath:/datawave/query/database.properties</value>
		</property>
		<property name="systemPropertiesModeName">
			<value>SYSTEM_PROPERTIES_MODE_OVERRIDE</value>
		</property>
	</bean>
	-->

	<bean id="DataDictionaryConfiguration" class="nsa.datawave.webservice.datadictionary.DataDictionaryConfiguration">
        <property name="modelName" value="DATAWAVE" />
		<property name="modelTableName" value="${metadata.table.name}" />
		<property name="metadataTableName" value="${metadata.table.name}" />
        <property name="numThreads" value="8" />
        <property name="normalizerMap">
            <map key-type="java.lang.String" value-type="java.lang.String">
                <entry key="nsa.datawave.data.type.GeoLatType" value="Latitude" />
                <entry key="nsa.datawave.data.type.GeoLonType" value="Longitude" />
                <entry key="nsa.datawave.data.type.GeoType" value="Combined latitude, longitude" />
                <entry key="nsa.datawave.data.type.IpAddressType" value="IP address" />
                <entry key="nsa.datawave.data.type.MacAddressType" value="MAC address" />
                <entry key="nsa.datawave.data.type.LcNoDiacriticsType" value="Text" />
                <entry key="nsa.datawave.data.type.LcType" value="Text" />
                <entry key="nsa.datawave.data.type.NoOpType" value="Unnormalized Text" />
                <entry key="nsa.datawave.data.type.NumberType" value="Number" />
                <entry key="nsa.datawave.data.type.TrimLeadingZerosType" value="Text" />
            </map>
        </property>
	</bean>
</beans>
