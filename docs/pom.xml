    <build>
        <plugins>
            <plugin>
                <groupId>com.webcohesion.enunciate</groupId>
                <artifactId>enunciate-maven-plugin</artifactId>
                <version>2.9.1</version>
                <dependencies>
                    <dependency>
                        <groupId>org.jboss.spec.javax.annotation</groupId>
                        <artifactId>jboss-annotations-api_1.2_spec</artifactId>
                        <version>1.0.0.Final</version>
                    </dependency>
                </dependencies>
                <executions>
                    <execution>
                        <id>enunciate-docs</id>
                        <goals>
                            <goal>docs</goal>
                        </goals>
                        <configuration>
                            <docsDir>${project.build.outputDirectory}/enunciate</docsDir>
                            <sourcepath-includes>
                                <include>
                                    <groupId>gov.nsa.datawave</groupId>
                                </include>
                                <include>
                                    <groupId>gov.nsa.datawave.webservices</groupId>
                                </include>
                            </sourcepath-includes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <!--
                    Override the javadoc configuration to include source jars from our dependencies in order to build combined
                    documentation for the entire distribution.
                -->
                <artifactId>maven-javadoc-plugin</artifactId>
                <executions>
                    <execution>
                        <id>module-apidocs</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration combine.children="append">
                            <includeDependencySources>true</includeDependencySources>
                            <includeTransitiveDependencySources>true</includeTransitiveDependencySources>
                            <dependencySourceIncludes>
                                <dependencySourceInclude>gov.nsa.datawave:*</dependencySourceInclude>
                                <dependencySourceInclude>gov.nsa.datawave.webservices:*</dependencySourceInclude>
                            </dependencySourceIncludes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
